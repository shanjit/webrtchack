extends layout

block content
	.row-fluid.well
		.span8
			p(id="guide") Welcome to the #{roomid} room

		.span4
			.span6
				#startchat
					.btn.btn-primary(data-intro="Start Chat" data-position="left") Start Chat
			.span6
				#endchat
					.btn.btn-primary(data-intro="End Chat" data-position="bottom") End Chat

	.row-fluid
		.span12.well(style='height: 80vh;')
			.span6
				video(style='margin: 0 0.5em 1em 0;-webkit-transform: scaleX(-1);-moz-transform: scaleX(-1); -ms-transform:  scaleX(-1); -o-transform:  scaleX(-1); transform: scaleX(-1);', id="localVideo" autoplay)
			.span6
				video(style='margin: 0 0.5em 1.5em 0;-webkit-transform: scaleX(-1);-moz-transform: scaleX(-1); -ms-transform:  scaleX(-1); -o-transform:  scaleX(-1); transform: scaleX(-1);', id="remoteVideo" autoplay)
		
		script(type='text/javascript', src='/js/chardinjs.min.js', charset='utf-8')
		link(rel="stylesheet", type="text/css", href="/stylesheets/chardinjs.css")
		script(type='text/javascript', src='/js/adapter.js')
		script(type='text/javascript', src='/js/showchat.js')
		script(type='text/javascript', src='/js/humane.min.js')
		link(rel="stylesheet", type="text/css", href="/stylesheets/flatty.css")